# =====================================================
# ProjectHub - Variáveis de Ambiente
# =====================================================
# Copie este arquivo para .env.local e preencha os valores
# cp .env.example .env.local

# -----------------------------------------------------
# BANCO DE DADOS (OBRIGATÓRIO)
# -----------------------------------------------------
# Opção 1: PlanetScale (MySQL) - Recomendado
# DATABASE_URL="mysql://username:password@host:3306/projecthub?sslaccept=strict"
#
# Opção 2: Supabase (PostgreSQL)
# DATABASE_URL="postgresql://username:password@host:5432/projecthub?pgbouncer=true"
# DIRECT_URL="postgresql://username:password@host:5432/projecthub"
#
# Opção 3: Neon (PostgreSQL)
# DATABASE_URL="postgresql://username:password@host/projecthub?sslmode=require"

DATABASE_URL=""

# -----------------------------------------------------
# NEXTAUTH (OBRIGATÓRIO)
# -----------------------------------------------------
# URL da aplicação (localhost para desenvolvimento)
NEXTAUTH_URL="http://localhost:3000"

# Chave secreta para JWT (mínimo 32 caracteres)
# Gerar: openssl rand -base64 32
NEXTAUTH_SECRET=""

# -----------------------------------------------------
# OAUTH PROVIDERS (OPCIONAL)
# -----------------------------------------------------
# Google OAuth
# https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# GitHub OAuth
# https://github.com/settings/developers
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# -----------------------------------------------------
# REDIS (OPCIONAL - Para produção multi-instância)
# -----------------------------------------------------
# Upstash Redis: https://upstash.com
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# -----------------------------------------------------
# EMAIL (OPCIONAL - Para notificações por email)
# -----------------------------------------------------
# Resend: https://resend.com
SMTP_HOST="smtp.resend.com"
SMTP_PORT="465"
SMTP_USER="resend"
SMTP_PASSWORD=""
SMTP_FROM="noreply@projecthub.com"

# -----------------------------------------------------
# UPLOAD DE ARQUIVOS (OPCIONAL)
# -----------------------------------------------------
# Uploadthing: https://uploadthing.com
UPLOADTHING_SECRET=""
UPLOADTHING_APP_ID=""

# -----------------------------------------------------
# CONFIGURAÇÕES DA PLATAFORMA
# -----------------------------------------------------
NEXT_PUBLIC_APP_NAME="ProjectHub"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_ENABLE_SOUND_NOTIFICATIONS="true"

# -----------------------------------------------------
# MODO MANUTENÇÃO
# -----------------------------------------------------
# Defina como "true" para ativar modo manutenção
MAINTENANCE_MODE="false"

# -----------------------------------------------------
# AMBIENTE
# -----------------------------------------------------
NODE_ENV="development"
